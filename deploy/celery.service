[Unit]
Description=Blog Comment Tool Celery Worker
After=network-online.target redis-server.service

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/blog-comment-tool
EnvironmentFile=/home/ubuntu/blog-comment-tool/.env
# Suggested:
#   CELERY_CONCURRENCY=3
#   CELERY_QUEUES=camp_a,camp_b
ExecStart=/usr/bin/env bash /home/ubuntu/blog-comment-tool/scripts/run_worker.sh
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
